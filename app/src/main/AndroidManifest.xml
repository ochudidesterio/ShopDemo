<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.virus.expressshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:theme="@style/Theme.ExpressShop"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.RegisterActvity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" >

        </activity>
        <activity
            android:name=".activities.SplashScreen"
            android:label="My Shop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ProductViewActivity"
            android:exported="false"
            android:label="@string/title_activity_product_view"
            android:theme="@style/Theme.ExpressShop" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ExpressShop">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
    </application>

</manifest>